<?xml version="1.0"?>
<robot name="arm">
    <link name="base_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="1.0 1.0 1.0"/>
            </geometry>
        </visual>
    </link>

  <link name="upperarm">
      <visual>
            <origin xyz="2.5 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="5.0 1.0 1.0"/>
            </geometry>
      </visual>
  </link>

  <link name="lowerarm">
      <visual>
            <origin xyz="2.5 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="5.0 1.0 1.0"/>
            </geometry>
      </visual>
  </link>

  <link name="wrist">
      <visual>
            <origin xyz="0.5 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="1.0 1.0 1.0"/>
            </geometry>
      </visual>
  </link>

  <link name="grip">
      <visual>
            <origin xyz="1.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="2.0 1.0 1.0"/>
            </geometry>
      </visual>
  </link>

  <joint name="base_to_upperarm" type="revolute">
        <parent link="base_link"/>
        <child link="upperarm"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="0.0" upper="6.283" velocity="0.5"/>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </joint>

  <joint name="upperarm_to_lowerarm" type="revolute">
        <parent link="upperarm"/>
        <child link="lowerarm"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="0.0" upper="6.283" velocity="0.5"/>
        <origin xyz="5.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </joint>

  <joint name="lowerarm_to_wrist" type="revolute">
        <parent link="lowerarm"/>
        <child link="wrist"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="-1.571" upper="1.571" velocity="0.5"/>
        <origin xyz="5.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </joint>

  <joint name="wrist_to_grip" type="revolute">
        <parent link="wrist"/>
        <child link="grip"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="-1.571" upper="1.571" velocity="0.5"/>
        <origin xyz="1.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </joint>

</robot>

